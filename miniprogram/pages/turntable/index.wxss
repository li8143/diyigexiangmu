.turntable-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  min-height: 100vh;
  background: #F5ECE6; /* 更淡的米色背景 */
}

.shop-info {
  width: 100vw;
  background: #8D6E63; /* 咖啡棕 */
  color: #fff;
  border-radius: 0 0 32rpx 32rpx;
  padding: 32rpx 0 24rpx 0;
  margin-bottom: 0;
  text-align: center;
}

.shop-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #fff;
}

.shop-desc {
  font-size: 24rpx;
  color: #fff;
  margin-top: 10rpx;
}

.turntable-area {
  width: 100vw;
  height: 500px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  margin-top: 100rpx;
}

.turntable-img {
  width: 600rpx;
  height: 600rpx;
  border-radius: 50%;
  background: #fff;
  box-shadow: 0 4rpx 24rpx #ddd;
}

.turntable-canvas {
  width: 400px;
  height: 400px;
  display: block;
}

.draw-btn {
  margin-top: 24px;
  width: 220px;
  height: 60px;
  background: #ffb300;
  color: #fff;
  font-size: 28px;
  border-radius: 30px;
}

.draw-btn-fixed {
  position: fixed;
  left: 50%;
  bottom: 200rpx;
  transform: translateX(-50%);
  width: 260px;
  height: 60px;
  background: #BCAAA4; /* 更淡的咖啡色 */
  color: #4E342E;
  font-size: 28px;
  border-radius: 30px;
  box-shadow: 0 4rpx 24rpx #ddd;
  z-index: 99;
  display: flex;
  align-items: center;
  justify-content: center;
}

.result-modal {
  position: fixed;
  top: 0; left: 0; right: 0; bottom: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 100;
}

.result-content {
  /* background: #fff;  // 可选 */
  border-radius: 20rpx;
  padding: 40rpx 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;   /* 内容水平居中 */
  justify-content: center; /* 内容垂直居中（可选） */
}

.result-img {
  width: 80vw;
  height: 80vw;
  max-width: 600rpx;
  max-height: 600rpx;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
  display: block;
}

.result-name {
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.result-desc {
  font-size: 22rpx;
  color: #666;
  margin-bottom: 16rpx;
}

.close-btn {
  width: 200rpx;
  height: 60rpx;
  background: #ffb300;
  color: #fff;
  font-size: 28rpx;
  border-radius: 30rpx;
}

.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100vw;
  display: flex;
  justify-content: space-around;
  background: #fff;
  padding: 20rpx 0;
  box-shadow: 0 -2rpx 12rpx #eee;
}

.nav-btn {
  font-size: 28rpx;
  color: #333;
  background: none;
  border: none;
}