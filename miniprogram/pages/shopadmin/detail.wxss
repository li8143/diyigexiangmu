.shopadmin-container {
  padding: 32rpx;
  background: #F5ECE6;
  min-height: 100vh;
}
.shop-card {
  background: #fff;
  border-radius: 24rpx;
  box-shadow: 0 4rpx 24rpx #e0d7ce;
  padding: 40rpx 32rpx 32rpx 32rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 32rpx;
}
.shop-logo {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-bottom: 24rpx;
  background: #f6f6f6;
}
.shop-name {
  font-size: 40rpx;
  font-weight: bold;
  color: #8D6E63;
  margin-bottom: 12rpx;
}
.shop-desc {
  color: #BCAAA4;
  font-size: 28rpx;
  text-align: center;
  margin-bottom: 8rpx;
}
.info-card {
  background: #fff;
  border-radius: 20rpx;
  box-shadow: 0 2rpx 12rpx #e0d7ce;
  padding: 32rpx;
  margin-bottom: 32rpx;
}
.info-row {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #6D4C41;
  margin-bottom: 18rpx;
}
.iconfont {
  margin-right: 16rpx;
  font-size: 32rpx;
}
.edit-btn {
  width: 100%;
  height: 88rpx;
  background: #8D6E63;
  color: #fff;
  font-size: 32rpx;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 24rpx #e0d7ce;
  font-weight: bold;
  margin-top: 24rpx;
} 