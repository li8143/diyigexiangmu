.shopadmin-container {
  min-height: 100vh;
  background: #F5ECE6;
  padding: 0 24rpx 40rpx 24rpx;
}
.shopadmin-section {
  background: #fff;
  border-radius: 32rpx;
  box-shadow: 0 4rpx 24rpx #e0d7ce;
  margin: 48rpx 0 0 0;
  padding: 40rpx 32rpx 32rpx 32rpx;
}
.shopadmin-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #8D6E63;
  margin-bottom: 32rpx;
  text-align: center;
}
.shopadmin-form {
  display: flex;
  flex-direction: column;
  gap: 32rpx;
}
.form-row {
  display: flex;
  align-items: center;
  margin-bottom: 0;
}
.form-label {
  width: 140rpx;
  font-size: 28rpx;
  color: #8D6E63;
  flex-shrink: 0;
}
.shop-img {
  width: 120rpx;
  height: 120rpx;
  border-radius: 16rpx;
  object-fit: cover;
  margin: 0 24rpx 0 0;
  box-shadow: 0 2rpx 8rpx #eee;
}
.img-btn {
  font-size: 24rpx;
  padding: 8rpx 24rpx;
  background: #BCAAA4;
  color: #4E342E;
  border-radius: 20rpx;
  border: none;
  margin-left: 0;
}
.form-input {
  flex: 1;
  font-size: 28rpx;
  padding: 12rpx 18rpx;
  border: 1rpx solid #e0d7ce;
  border-radius: 12rpx;
  background: #F5ECE6;
  color: #4E342E;
}
.form-textarea {
  flex: 1;
  font-size: 28rpx;
  min-height: 80rpx;
  padding: 12rpx 18rpx;
  border: 1rpx solid #e0d7ce;
  border-radius: 12rpx;
  background: #F5ECE6;
  color: #4E342E;
}
.save-btn {
  margin-top: 40rpx;
  width: 100%;
  height: 60rpx;
  background: #8D6E63;
  color: #fff;
  font-size: 28px;
  border-radius: 30px;
  box-shadow: 0 4rpx 24rpx #ddd;
  z-index: 99;
  display: flex;
  align-items: center;
  justify-content: center;
}

