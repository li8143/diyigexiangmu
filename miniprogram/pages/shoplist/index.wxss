/* pages/shoplist/index.wxss */
.shoplist-container {
  min-height: 100vh;
  background: #F5ECE6; /* 主题背景色 */
  padding: 0 24rpx 40rpx 24rpx;
}
.shoplist-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #8D6E63;
  text-align: center;
  margin: 48rpx 0 32rpx 0;
  letter-spacing: 2rpx;
}
.shoplist-empty {
  margin: 80rpx 0 40rpx 0;
  text-align: center;
  color: #bdbdbd;
  font-size: 30rpx;
}
.shop-item {
  background: #fff;
  border-radius: 32rpx;
  box-shadow: 0 4rpx 24rpx #e0d7ce;
  margin-bottom: 40rpx;
  padding: 0;
  cursor: pointer;
  transition: box-shadow 0.2s, background 0.2s;
  display: flex;
  flex-direction: row;
  align-items: center;
  overflow: hidden;
  position: relative;
}
.shop-card {
  position: relative;
  min-height: 160rpx;
  margin-bottom: 32rpx;
  background: #fff;
  border-radius: 20rpx;
  box-shadow: 0 2rpx 12rpx #e0d7ce;
  display: flex;
  flex-direction: row;
  align-items: center;
  padding-left: 24rpx;
}

.edit-icon {
  position: absolute;
  top: 18rpx;
  right: 18rpx;
  width: 40rpx;
  height: 40rpx;
  background: url('data:image/svg+xml;utf8,<svg width="40" height="40" viewBox="0 0 1024 1024" fill="%238D6E63" xmlns="http://www.w3.org/2000/svg"><path d="M880.64 320.64l-177.28-177.28c-25.6-25.6-67.2-25.6-92.8 0l-448 448c-6.4 6.4-12.8 19.2-12.8 32v192c0 38.4 25.6 64 64 64h192c12.8 0 25.6-6.4 32-12.8l448-448c25.6-25.6 25.6-67.2 0-92.8zM352 832H160v-192l384-384 192 192-384 384zm480-480l-64 64-192-192 64-64c12.8-12.8 32-12.8 44.8 0l177.28 177.28c12.8 12.8 12.8 32 0 44.8z"/></svg>') no-repeat center center;
  background-size: 60% 60%;
  cursor: pointer;
  z-index: 2;
}
.shop-item-bar {
  position: absolute;
  left: 0;
  top: 16rpx;
  bottom: 16rpx;
  width: 12rpx;
  border-radius: 8rpx;
  background: #8D6E63; /* 会被 item._color 覆盖 */
}
.shop-item-logo {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  color: #fff;
  font-size: 32rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 24rpx 0 16rpx;
  box-shadow: 0 2rpx 8rpx #eee;
  flex-shrink: 0;
}
.shop-item-content {
  flex: 1;
  padding: 36rpx 32rpx 28rpx 0;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.shop-item:active {
  box-shadow: 0 8rpx 32rpx #bca;
  background: #F3E9E2;
}
.shop-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #4E342E;
  margin-bottom: 10rpx;
}
.shop-desc {
  font-size: 26rpx;
  color: #8D6E63;
  word-break: break-all;
  line-height: 1.6;
}
.shoplist-title-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin: 48rpx 0 32rpx 0;
}
.add-shop-btn {
  font-size: 24rpx;
  padding: 8rpx 24rpx;
  background: #BCAAA4;
  color: #4E342E;
  border-radius: 20rpx;
  border: none;
  box-shadow: 0 2rpx 8rpx #eee;
  margin-left: 20rpx;
}
.shop-tags {
  margin-top: 16rpx;
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}
.shop-tag {
  background: #F5ECE6;
  color: #8D6E63;
  font-size: 22rpx;
  border-radius: 16rpx;
  padding: 4rpx 18rpx;
  margin-right: 0;
}
.shop-item-img {
  width: 88rpx;
  height: 88rpx;
  border-radius: 16rpx;
  object-fit: cover;
  margin: 0 24rpx 0 16rpx;
  box-shadow: 0 2rpx 8rpx #eee;
  flex-shrink: 0;
}
.shop-info-row {
  margin-top: 10rpx;
  font-size: 22rpx;
  color: #8D6E63;
  display: flex;
  align-items: center;
}
.shop-info-label {
  color: #BCAAA4;
  margin-right: 6rpx;
}
.shop-info-value {
  color: #8D6E63;
}